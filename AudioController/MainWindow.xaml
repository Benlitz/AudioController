<Window x:Class="AudioController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ac="clr-namespace:AudioController"
        Title="MainWindow" Height="120" Width="600" WindowStyle="None"
        AllowsTransparency="True" WindowStartupLocation="CenterScreen" Topmost="True"
        Background="Transparent" ShowActivated="False" ShowInTaskbar="False">
    <Border Background="LightSteelBlue" CornerRadius="40" x:Name="MainBorder" Opacity="0.85">
        <Viewbox Margin="15">
            <TextBlock x:Name="MainText" Text="{Binding DeviceName, RelativeSource={RelativeSource AncestorType=ac:MainWindow}, Mode=OneWay}"/>
        </Viewbox>
        <Border.Triggers>
            <EventTrigger RoutedEvent="Window.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="MainBorder" 
                       Storyboard.TargetProperty="Opacity" To="0" 
                       Duration="0:0:0.5" BeginTime="0:0:2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
    </Border>
</Window>
